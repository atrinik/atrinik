VPATH = @srcdir@
srcdir = @srcdir@

LOCAL_LIBRARIES = ../zlib/zlib.a

SRCS = \
	book.c \
	client.c \
	commands.c \
	event.c \
	inventory.c \
	item.c \
	main.c \
	map.c \
	menu.c \
	metaserver.c \
	misc.c \
	player.c \
	party.c \
	socket.c \
	sound.c \
	sprite.c \
	textwin.c \
	wrapper.c \
	widget.c \
	dialog.c

DEPEND = @DEPEND@

OBJS = $(SRCS:.c=.o)

SDL_CFLAGS = @SDL_CFLAGS@
SDL_CONFIG = @SDL_CONFIG@
SDL_LIBS = @SDL_LIBS@ -lSDL_image -lSDL_mixer

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS) $(SDL_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I../include

LDFLAGS = @LDFLAGS@

LIBS = @LIBS@ $(EXTRA_LIBS) $(SDL_LIBS)

CC = @CC@
RM = @RM@

atrinik: $(OBJS) $(LOCAL_LIBRARIES)
	$(RM) -f $@
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LOCAL_LIBRARIES) $(LIBS)

../zlib/zlib.a:
	(cd ../zlib; $(MAKE) $(MFLAGS) all)

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

clean::
	$(RM) -f atrinik $(OBJS) Makefile.bak

distclean:: clean
	$(RM) -f Makefile ./include/define.h

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $*.c

all: atrinik
